@using app_frontEnd.Controllers
@model List<listTaskModel>

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Descripción</th>
            <th scope="col">Operación</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        <div class="input-group">
                            <button class="btn btn-warning" id="btn-user-editar" onclick="EditTask('@item._id')" data-bs-toggle="modal" data-bs-target="#Editar">Editar</button>
                            <button class="btn btn-danger" id="btn-user-eliminar" onclick="DelTask('@item._id')" data-bs-toggle="modal" data-bs-target="#Eliminar">Eliminar</button>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>